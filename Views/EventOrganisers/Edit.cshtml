@model MiidWeb.Models.EventOrganiserViewModel
@{
	ViewBag.Title = "Edit EO";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-9">
	<div class="row">
		<div class="col-md-12">

			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()


				<span style="color:palevioletred">@Html.ValidationSummary()</span>

				@Html.HiddenFor(model => model.EventOrganiser.ID)
				@Html.HiddenFor(model => model.EventOrganiser.StartDate)
				@Html.HiddenFor(model => model.EventOrganiser.DateCreated)
				@Html.HiddenFor(model => model.EventOrganiser.DateUpdated)
				@Html.HiddenFor(model => model.EventOrganiser.Email)
			


				@Html.HiddenFor(model => model.EventOrganiser.StatusID)



				<div class="content-box-header">
					<div class="panel-title">Edit Event Organiser Account</div>
					<div class="panel-title pull-right" style="margin-top:-8px;">
						@Html.DropDownList("StatusID", null, htmlAttributes: new { @class = "form-control", placeholder = "" })
						@Html.ValidationMessageFor(model => model.EventOrganiser.StatusID, "", new { @class = "red" })
					</div>


					<div class="panel-options">




					</div>
				</div>

				<div class="content-box-large box-with-header">
					<div class="row">
						<div class="col-md-12 form-group">
							<h4>Company's primary details</h4>
						</div>



						<div class="col-md-12 form-group">
							<label>Company Name</label>
							@Html.EditorFor(model => model.EventOrganiser.CompanyName, new { htmlAttributes = new { @class = "form-control", placeholder = "Company Name" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.CompanyName, "", new { @class = "red" })
						</div>
						<div class="col-md-4 form-group">
							<label>Contact Name</label>
							@Html.EditorFor(model => model.EventOrganiser.ContactName, new { htmlAttributes = new { @class = "form-control", placeholder = "Contact Name" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.ContactName, "", new { @class = "red" })
						</div>
						<div class="col-md-4 form-group">
							<label>Phone</label>

							@Html.EditorFor(model => model.EventOrganiser.Telephone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telephone" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.Telephone, "", new { @class = "red" })
						</div>
						<div class="col-md-4 form-group">
							<label>Email</label>
							@Html.EditorFor(model => model.EventOrganiser.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", @readonly = "readonly" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.Email, "", new { @class = "red" })
						</div>
						<div class="col-md-12 form-group">
							<hr>
						</div>
						<div class="col-md-12 form-group">
							<h4>App login details</h4>
						</div>
						<div class="col-md-12 form-group">
							<label>App PIN</label>
							@Html.EditorFor(model => model.EventOrganiser.HandHeldLoginPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Hand Held Login Password" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.HandHeldLoginPassword, "", new { @class = "red" })
						</div>


						<div class="col-md-12 form-group">
							<hr>
						</div>
						<div class="col-md-12 form-group">
							<h4>Alternative contact details</h4>
						</div>
						<div class="col-md-4 form-group">
							<label>Secondary Contact</label>
							@Html.EditorFor(model => model.EventOrganiser.SecondaryContactName, new { htmlAttributes = new { @class = "form-control", placeholder = "Secondary Contact Name" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.SecondaryContactName, "", new { @class = "red" })
						</div>
						<div class="col-md-4 form-group">
							<label>Phone</label>
							@Html.EditorFor(model => model.EventOrganiser.SecondaryContactTelephone, new { htmlAttributes = new { @class = "form-control", placeholder = "Secondary Contact Telephone" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.SecondaryContactTelephone, "", new { @class = "red" })
						</div>

						<div class="col-md-4 form-group">
							<label>Email</label>

							@Html.EditorFor(model => model.EventOrganiser.SecondaryContactEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Secondary Contact Email" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.SecondaryContactEmail, "", new { @class = "red" })
						</div>
						<div class="col-md-12 form-group">
							<hr>
						</div>
						<div class="col-md-12 form-group">
							<h4>Banking details</h4>
						</div>
						<div class="col-md-12 form-group">
							<label>Bank Name</label>

							@Html.EditorFor(model => model.EventOrganiser.Bank, new { htmlAttributes = new { @class = "form-control", placeholder = "Bank" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.Bank, "", new { @class = "red" })
						</div>
						<div class="col-md-3 form-group">
							<label>Account Number</label>
							@Html.EditorFor(model => model.EventOrganiser.BankAccountNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Bank Account Number" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.BankAccountNumber, "", new { @class = "red" })
						</div>
						<div class="col-md-3 form-group">
							<label>Account Holder Name</label>
							@Html.EditorFor(model => model.EventOrganiser.BankAccountHolder, new { htmlAttributes = new { @class = "form-control", placeholder = "Bank Account Holder" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.BankAccountHolder, "", new { @class = "red" })
						</div>
						<div class="col-md-3 form-group">
							<label>Branch code</label>
							@Html.EditorFor(model => model.EventOrganiser.BranchCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Branch Code" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.BranchCode, "", new { @class = "red" })
						</div>
						<div class="col-md-3 form-group">
							<label>Account Type</label>
							@Html.EditorFor(model => model.EventOrganiser.BankType, new { htmlAttributes = new { @class = "form-control", placeholder = "Bank Type" } })
							@Html.ValidationMessageFor(model => model.EventOrganiser.BankType, "", new { @class = "red" })
						</div>

						<div class="col-md-12 form-group">
							<h4>Password rest</h4>
						</div>
						
						<div class="col-md-12 form-group hidden">

							@Html.EditorFor(model => model.ResetPasswordTrue)
							<br /> <br />

						</div>
						

						<div class="col-md-12 form-group hidden">


							<input type="submit" value="Save" class="btn btn-primary" />
							@Html.ActionLink("Cancel", "IndexList", null, htmlAttributes: new { @class = "btn btn-default" })
						</div>
					</div>
				</div>
			}
		</div>





		
			</div>
		</div>



					
							
							
				



			