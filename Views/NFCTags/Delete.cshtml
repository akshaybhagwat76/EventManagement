@model MiidWeb.NFCTag

@{
	ViewBag.Title = "Delete";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	//Layout = null;
}

<style>
	<!--

	.glyphicon {
		cursor: pointer;
	}

	input,
	select {
		width: 100%;
	}
	-->
</style>
<div class="col-md-9">
	<div class="row">
		<div class="col-md-12">

			<div class="panel-title panel-warning">
				<div class="panel panel-danger">
					<div class="panel-heading">Warning: Are you sure you would like to delete Ticket:<strong> @Model.TagNumber</strong></div>
					<div class="panel-body">
						<dl class="dl-horizontal">
							<dt>
								@Html.DisplayNameFor(model => model.TagNumber)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.TagNumber)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.ActivationDate)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.ActivationDate)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.ActivationCode)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.ActivationCode)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.TagPin)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.TagPin)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.EndUser.Surname)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.EndUser.Surname)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.Status.Code)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.Status.Code)
							</dd>
							<button type="submit" value="Delete" class="btn btn-primary btn-danger pull-right">Delete</button>

						</dl>


					</div>


				</div>
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()



					@Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })

				}
			</div>
		</div>
	</div>
</div>

