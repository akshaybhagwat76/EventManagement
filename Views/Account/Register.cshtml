@model MiidWeb.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";


	Layout = MiidWeb.Repositories.TicketRepository.GetLayoutFile("Layout");



}
<link rel="stylesheet" type="text/css" href="~/Content/css/css2018/validate/jquery.validate.css" />
<style>
	.red {
		color: #be1c1d;
	}
</style>
<title>Register to puchase tickets or top up pre-paid for events </title>


<meta name="description" content="Sign up for a Mi-id account to purchase tickets online and top-up cashless funds for events" />


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "l", role = "form" }))
{

	@Html.Hidden("ReturnUrl", (object)ViewBag.ReturnUrl)






	<div class="container bg-grey bg">
		<div class="row vertical-offset-40px">


			<div class="col-md-8 col-md-offset-2">

				<div class="panel panel-default ">

					<div class="panel-body text-center">

						<br>
						<div class="col-md-12">

							<h4>@GlobalVariables.RegisterParaOne</h4>
							<br><br>

							@Html.AntiForgeryToken()
							@Html.ValidationSummary("", new { @style = "color:red" })
						</div>
						<div role="form">


							<form action="" method="post" id="fileForm" role="form">

								<p>
									<div class="form-group col-md-6 ">
										@Html.TextBoxFor(m => m.Email, new { @id = "ValidEmail", @class = "form-control input-lg", placeholder = "Enter Email" })
									</div>
								</p>
								<p>

									<div class="form-group col-md-6 ">
										@Html.TextBoxFor(m => m.ConfirmEmail, new { @id = "ValidConfirmEmail", @class = "form-control input-lg", placeholder = "Confirm Email" })
									</div>
								</p>
								<p>
									<div class="form-group col-md-12">
										<span style="color:#be1c1d">@GlobalVariables.RegisterPasswordLength</span>
									</div>
								</p>
								<p>
									<div class="form-group col-md-6 ">
										@Html.PasswordFor(m => m.Password, new { @id = "ValidPassword", @class = "form-control input-lg", placeholder = "Choose Password" })-
									</div>
								</p>
								<p>

									<div class="form-group col-md-6 ">
										@Html.PasswordFor(m => m.ConfirmPassword, new { @id = "ValidConfirmPassword", @class = "form-control input-lg", placeholder = " Confirm Password" })
									</div>
								</p>


								<div class="form-group pull-left col-md-12 ">
									<input type="checkbox" onclick="ShowPassword2();ShowPassword1()" />
									<label>@GlobalVariables.ShowPassword</label>

								</div>
								<br>
								<div class="form-group col-md-12 ">
									<input type="submit" value="@GlobalVariables.CallToActionThree" class="btn btn-lg btn-default btn-block">
								</div>


							</form>

							<!-- adds user email if a friend purchases them a ticket-->
							@Scripts.Render("~/Scripts/splitEmail.js")


							<!-- adds user email if a friend purchases them a ticket-->
							@Scripts.Render("~/Scripts/splitEmail.js")

							<div class="form-group pull-left col-md-12 ">
								<h4 class="">@GlobalVariables.CreateFirstSeucrePurchase</h4>
							</div>

						</div>
						<div class="form-group pull-left col-md-12 ">
							<h4><a href="~/Account/ForgotPassword"> @GlobalVariables.ForgotpasswordText </a></h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





}

<script>
	$('.btn').on('click', function () {
	var $this = $(this);
	$this.button('loading');
	
	});
	
     </script>

<!--igonre spces that where copied and pasted-->
<script>
	$('#ValidEmail').on("input", function () {
		$(this).val($(this).val().replace(/ /g, ""));
	});
</script>
<script>
	$('#ValidConfirmEmail').on("input", function () {
		$(this).val($(this).val().replace(/ /g, ""));
	});
</script>
<script>
	$('#ValidPassword').on("input", function () {
		$(this).val($(this).val().replace(/ /g, ""));
	});
</script>
<script>
	$('#ValidConfirmPassword').on("input", function () {
		$(this).val($(this).val().replace(/ /g, ""));
	});
</script>

<!-- show hide password-->

<script>
	function ShowPassword2() {
		var x = document.getElementById("ValidConfirmPassword");
		if (x.type === "password") {
			x.type = "text";
		} else {
			x.type = "password";
		}
	}
</script>
<script>
	function ShowPassword1() {
		var x = document.getElementById("ValidPassword");
		if (x.type === "password") {
			x.type = "text";
		} else {
			x.type = "password";
		}
	}
</script>

<!--Close show hide password-->
<!--disable spaces-->

<script>


	function doIt(e) {
		var e = e || event;

		if (e.keyCode == 32) return false;

	}
	window.onload = function () {
		var inp = document.getElementById("ValidConfirmEmail");
		var inpa = document.getElementById("ValidPassword");
		var inpb = document.getElementById("ValidConfirmPassword");
		var inpc = document.getElementById("ValidEmail");

		inp.onkeydown = doIt;
		inpa.onkeydown = doIt;
		inpb.onkeydown = doIt;
		inpc.onkeydown = doIt;
	};

</script>

<script>

	$('.btn').on('click', function () {
		var $this = $(this);
		$this.button('loading');

	});

</script>











