@model MiidWeb.Models.EndUserViewModel
@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";




}

<div class="col-md-9">
	<div class="row">
		<div class="col-md-12">
			<div class="content-box-header">
				<div class="panel-title">Search User</div>

				<div class="panel-options">

				</div>
			</div>
			<div class="content-box-large box-with-header">
				 @using (@Html.BeginForm()) { @Html.Hidden("UserName", (object)ViewBag.UserName)   <div class="table-responsive" style="overflow-x:auto;">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>ID number</th>
                <th>Available funds</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EndUser.Firstname</td>
                <td>@Model.EndUser.Surname</td>
                <td>@Model.EndUser.IDNumber</td>
                <td>@Model.AvailableBalance</td>


            </tr>


        </tbody>

    </table>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Credit</label>
                @Html.RadioButtonFor(model => model.IsCreditTransaction, true, new { name = "IsCreditTransaction", id = "IsCreditTransaction1" })

            </div>


        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Debit</label>
                @Html.RadioButtonFor(model => model.IsCreditTransaction, false, new { name = "IsCreditTransaction", id = "IsCreditTransaction2" })

            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <span style="color: red"> @Html.ValidationSummary()</span>

            <div class="form-group">
                <label>Transaction Amount</label>
                @Html.TextBox("TransactionAmount", null, new { @class = "form-control", placeholder = "eg. 120", @Value = "0" })

            </div>


        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">

                <input type="submit" class="btn btn-primary" value="Confirm" />

            </div>


        </div>

    </div>


</div>






        }



</div>
		</div>
	</div>
</div>