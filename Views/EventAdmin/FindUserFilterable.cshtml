@model MiidWeb.Models.EndUserGridViewModel
@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}




<div class="col-md-9">
	<div class="row">
		<div class="col-md-12">
			<div class="content-box-header">
				<div class="panel-title">Search User</div>

				<div class="panel-options">

				</div>
			</div>
			<div class="content-box-large box-with-header">
				<div class="panel panel-success">
					<div class="panel-heading"><strong>Search Parameters</strong></div>
					<div class="panel-body">
						<div class="row">

							<div class="col-md-4">
								<div class="form-group">
									<label>ID/Passport Number</label>
									@Html.TextBoxFor(model => model.IdNumberSearch, new { @class = "form-control", disabled = "true" })
								</div>
							</div>

							<div class="col-md-4">
								<div class="form-group">
									<label>First Name</label>
									@Html.TextBoxFor(model => model.FirstNameSearch, new { @class = "form-control", disabled = "true" })
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>Last Name</label>
									@Html.TextBoxFor(model => model.SurnameSearch, new { @class = "form-control", disabled = "true" })
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12">
								<div class="form-group">


									@Html.ActionLink("Clear Search", "Index", null, new { @class = "btn btn-primary" })
								</div>
							</div>
						</div>

						<div class="table-responsive" style="overflow-x:auto;">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Name</th>
										<th>Surname</th>
										<th>ID Number</th>
										<th>Email</th>
										<th>Funds</th>
										<th>Tag Status</th>

										<th>Activate Tag</th>
										<th>Cancel Tag</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var user in Model.Users)
									{
									<tr>
										<td>@user.EndUser.Firstname</td>
										<td>@user.EndUser.Surname</td>
										<td>@user.EndUser.IDNumber</td>
										<td>@user.EndUser.Email</td>
										<td>@Html.ActionLink("Funds", "Transactions", new { id = @user.EndUser.ID }, null)</td>

										<td>@user.TagStatus</td>

										<td>
											@if (user.TagStatus != "Active")
											{
												@Html.ActionLink("Activate", "AddMiiBand", new { id = @user.EndUser.ID }, null)
											}
										</td>
										<td>
											@if (user.TagStatus == "Active")
											{
												@Html.ActionLink("Cancel", "EditMiiBand", new { id = @user.EndUser.ID }, null)
											}
										</td>


									</tr>
									}




								</tbody>

							</table>






						</div>


					</div>
				</div>
				@if (Model.Users == null)
				{
					<div class="panel panel-danger">
						<div class="panel-heading"><strong>No Use Found</strong></div>
						<div class="panel-body">
							<p>Please adjust your search parameters</p>

							@Html.ActionLink("Clear Search", "Index")
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>



				



			


				
