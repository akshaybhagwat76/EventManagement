@model MiidWeb.MyMoney

@{
    ViewBag.Title = "Add Funds";
}
<h2>Mii-Money</h2>
<h4>Add Funds</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.TransactionTypeID)
    @Html.HiddenFor(model => model.TransactionDate)
    @Html.HiddenFor(model => model.EndUserID)
    @Html.HiddenFor(model => model.RunningBalance)

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "red" })
       

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "red" })
            </div>
        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "red" })
            </div>
        </div>



        

        <div class="form-group">
            @Html.LabelFor(model => model.RunningBalance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @ViewBag.RunningBalance
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Funds" class="btn btn-default" />
            </div>
        </div>
    </div>
}


