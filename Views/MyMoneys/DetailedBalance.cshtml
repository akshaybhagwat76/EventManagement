@model List<MiidWeb.Models.MyMoneyViewModel>
@{
	ViewBag.Title = "Mii-Funds";

}

<!-- One -->



	<div class="container">

		<div class="row">
            <div class="col-md-8 offset-md-2">

                <div class="card">

                    <div class="card-body">

                        <h5 class="card-title">Transactions for: @ViewBag.UserName </h5>




                        @if (@Model.Count() == 0)
                        {
                            <h4></h4>
                            <h5 class="card-title">You don't have any Mii-Funds transactions yet</h5>
                        }
                        else
                        {

                            <p class="card-text">
                                <div class="table-responsive" style="overflow-x:auto;">
                                    <table class="table table-responsive table-striped">
                                        <thead>
                                            <tr>
                                                <th>Date </th>
                                                <th> Description </th>
                                                <th>Debit   </th>
                                                <th>Credit  </th>
                                                <th> 	Balance  </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (item.MyMoney.TransactionDate != null)
                                                        {
                                                            DateTime date = (DateTime)item.MyMoney.TransactionDate;
                                                            <label> @date.ToString("yyyy-MM-dd hh:mm") </label>

                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MyMoney.Description)
                                                    </td>

                                                    <td>
                                                        @if (item.MyMoney.TransactionType.DebitCredit == "DR")
                                                        {
                                                            @Html.DisplayFor(modelItem => item.MyMoney.Amount)
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (item.MyMoney.TransactionType.DebitCredit == "CR")
                                                        {
                                                            @Html.DisplayFor(modelItem => item.MyMoney.Amount)
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Balance)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </p>


                        }

                    </div>

            </div>
			</div>
		</div>
        </div>


				
		











