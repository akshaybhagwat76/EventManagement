@{
    ViewBag.Title = "CheckEmail";
    var result = ViewBag.Response;

}


<div class="container bg-grey">
	<div class="row vertical-offset-40px">


		<div class="col-md-4 col-md-offset-4">

			<div class="panel panel-default ">

				<div class="panel-body text-center">

					<div>
						<h4> Check your email</h4>
						<img src="~/Content/images2018/mail.svg" class="img-xs ">						
						<p>A verification email was sent to <b>@ViewBag.Email</b>.</p>
						<p>Open it up and click on the activation link. If you cannot see the email please check your spam folder</p>
						



					</div>
					<br>


					<!-- @Html.ActionLink("Continue", "Logoff", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, new { @class = "btn btn-lg btn-info btn-block" }) -->


					<p style="display:none;">@result</p>

					</div>
				</div>
			</div>
		</div>
	</div>

