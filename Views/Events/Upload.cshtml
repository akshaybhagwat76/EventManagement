@model MiidWeb.Controllers.EventImageModel
@{
    ViewBag.Title = "Upload";
}
<script type="text/javascript">

    function displayfilename() {
        debugger;
        $("#displayfilename1").val($("#file").val());
    }


    $("document").ready(function () {

        $("#file").change(function () {

            displayfilename();
        });


    });

</script>
<style type="text/css">
    div.fileinputs
    {
        position: relative;
        padding-bottom: 20px;
    }
    
    div.fakefile
    {
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 1;
    }
    
    input.file
    {
        position: relative;
        text-align: right;
        -moz-opacity: 0;
        filter: alpha(opacity: 0);
        opacity: 0;
        z-index: 2;
        height: 60px;
    }
</style>
<div class="row project-list">
    <div class="sixcol">
        <h2>
            <img alt="doc" src="../../Content/images/document.png" />Upload Document</h2>
    </div>
    <div class="sixcol last">
    </div>
</div>
@using (Html.BeginForm("Upload", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.EventID)
    
    <div class="row project-detail-row">
        <div class="tencol">
            <div class="fileinputs">
                <input type="file" class="file" name="file" id="file" onclick="displayfilename();" />
                <div class="fakefile" onclick="displayfilename();">
                    <input type="text" id="displayfilename1" value="No file selected" class="text-box"
                        disabled="disabled" style="width: 100%" />
                    <img alt="Browse" src="/vf/btnBrowse.png" onclick="displayfilename();" />
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="sixcol">
            <input type="image" src="/vf/btnOK.png" alt="OK" onclick="submit();" />
           
        </div>
    </div>
    
@*
    <input type="file" name="file" />*@
    
}
